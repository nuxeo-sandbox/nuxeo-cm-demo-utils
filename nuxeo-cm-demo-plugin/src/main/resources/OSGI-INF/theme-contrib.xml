<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.ui.cm-demo-quickstats-widget.theme.contrib">

  <require>org.nuxeo.theme.nuxeo.default</require>

  <extension target="org.nuxeo.theme.styling.service" point="pages">
    <themePage name="*">
      <styles append="true">
        <style>cm-demo-quickstats-widget</style>
      </styles>
    </themePage>
  </extension>

  <extension target="org.nuxeo.theme.services.ThemeService" point="views">
    <view name="nuxeo5 includes" template-engine="jsf-facelets" merge="true">
      <format-type>widget</format-type>
      <resource>cm-demo-quickstats-widget.js</resource>
    </view>
  </extension>

  <extension target="org.nuxeo.theme.services.ThemeService" point="resources">
    <resource name="cm-demo-quickstats-widget.js">
      <path>scripts/cm-demo-quickstats-widget.js</path>
	  <require>jquery.js</require>
    </resource>
  </extension>

  <extension target="org.nuxeo.theme.styling.service" point="styles">
    <style name="cm-demo-quickstats-widget">
      <src>themes/css/cm-demo-quickstats-widget.css</src>
    </style>
  </extension>

</component>